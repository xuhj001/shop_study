<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="BaseTheme">
        <!--这是文本的主要颜色，用于工具栏标题-->
        <!--<item name="android:textColorPrimary">@color/toolbar_text</item>-->
        <!--这是次文本的主要颜色，用于工具栏次标题-->
        <!--<item name="android:textColorSecondary">@color/toolbar_text</item>-->
        <!--分割线颜色-->
        <!--<item name="android:divider">@color/divider_line</item>-->
